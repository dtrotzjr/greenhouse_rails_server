<p id="notice"><%= notice %></p>

<h1>Listing Sensor Data</h1>

<table>
  <thead>
    <tr>
      <th>Sensor</th>
      <th>Temperature</th>
      <th>Humidity</th>
      <th>Belongs to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensor_data.each do |sensor_datum| %>
      <tr>
        <td><%= sensor_datum.sensor_id %></td>
        <td><%= sensor_datum.temperature %></td>
        <td><%= sensor_datum.humidity %></td>
        <td><%= sensor_datum.belongs_to %></td>
        <td><%= link_to 'Show', sensor_datum %></td>
        <td><%= link_to 'Edit', edit_sensor_datum_path(sensor_datum) %></td>
        <td><%= link_to 'Destroy', sensor_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

